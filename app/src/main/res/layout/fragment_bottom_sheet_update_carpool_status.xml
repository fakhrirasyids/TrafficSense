<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rounded_top"
    tools:context=".ui.carpool.verify.BottomSheetVerifyWaiting">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_clear"
        app:title="Update Status"
        app:titleTextColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_berangkat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_profile_setting"
            android:drawableEnd="@drawable/ic_next_navigate"
            android:drawablePadding="20dp"
            android:drawableTint="@android:color/black"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="30dp"
            android:text="Berangkat"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tiba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_profile_setting"
            android:drawableEnd="@drawable/ic_next_navigate"
            android:drawablePadding="20dp"
            android:drawableTint="@android:color/black"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="30dp"
            android:text="Tiba"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_selesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_profile_setting"
            android:drawableEnd="@drawable/ic_next_navigate"
            android:drawablePadding="20dp"
            android:drawableTint="@android:color/black"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="30dp"
            android:text="Selesai"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>